<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/demo_background"
    tools:context=".ui.home.HomeFragment">

    <TextView android:id="@+id/home_LblInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Â¿Desea iniciar?"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:fontFamily="@font/comforta"
        />

    <ImageButton android:id="@+id/home_btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/perfil_placeholder"
        android:layout_centerInParent="true"
        />

    <TextView android:id="@+id/textoCuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Aqui va el parrafo del cuento actual"
        android:textSize="30sp"
        android:textColor="#212121"
        />

    <LinearLayout android:id="@+id/demo_Contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/textoCuento"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/opcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#28B3FE"
            android:text="Opcion 1" />

        <Button
            android:id="@+id/opcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="#28B3FE"
            android:text="Opcion 2" />

        <Button
            android:id="@+id/opcion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="#28B3FE"
            android:text="Opcion 3" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/demo_Contenido"
        android:src="@drawable/logo_placeholder"
        />

    <Button android:id="@+id/repetir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#28B3FE"
        android:text="Repetir" />
</RelativeLayout>